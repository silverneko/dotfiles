function print_motd
{
  echo -n $fg_bold[yellow]
  echo -n "  Welcome to `uname -srmo`"
  echo '
                .,-:;//;:=,
            . :H@@@MM@M#H/.,+%;,
         ,/X+ +M@@M@MM%=,-%HMMM@X/,
       -+@MM; $M@@MH+-,;XMMMM@MMMM@+-
      ;@M@@M- XM@X;. -+XXXXXHHH@M@M#@/.
    ,%MM@@MH ,@%=             .---=-=:=,.
    =@#@@@MX.,                -%HX$$%%%:;     ZSH CHEATSHEET:
   =-./@M@M$                   .;@MMMM@MM:
   X@/ -$MM/                    . +MM@@@M$
  ,@M@H: :@:                    . =X#@@@@-    CTRL + R Search history
  ,@@@MMX, .                    /H- ;@M@M=    CTRL + G Escape from search mode
  .H@@@@M@+,                    %MM+..%#$.    CTRL + L Clear screen
   /MMMM@MMH/.                  XM@MH; =;     CTRL + S Stop output to screen
    /%+%$XHH@$=              , .H@@@@MX,      CTRL + Q Re-enable screen output
     .=--------.           -%H.,@@@@@MX,      CTRL + _ Undo the last change
     .%MM@@@HHHXX$$$%+- .:$MMX =M@@MM%.       CTRL + ← Move one word backward 
       =XMMM@MM@MM#H;,-+HMM@M+ /MMMX=         CTRL + → Move one word forward
         =%@M@M#@$-.=$@MM@@@M; %M%=           CTRL + U Clear the entire line
           ,:+$+-,/H#MMMMMMM@= =,     CTRL + K Clear after cursor position
                 =++%%%%+/:-.         CTRL + W Delete the word before cursor
'
}
